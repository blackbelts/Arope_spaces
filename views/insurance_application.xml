                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="surveyor"/>
                    </group>

                    <field attrs="{'invisible': [('state', '=', 'pending')]}" name="survey_report_ids">
                        <tree editable="bottom" decoration-danger="state == 'pending'">
                            <field name="question"/>
                            <field name="file" widget="many2many_binary"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <group attrs="{'invisible': [('state', '=', 'pending')]}">
                        <group>
                            <field name="recomm"/>
                        </group>
