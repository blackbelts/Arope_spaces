        <field name="name">Survey Report</field>
        <field name="model">survey.report</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <field name="status" widget="statusbar"/>
                    <button  name="assign_surveyor" string="Assign Surveyor" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'pending')]}" groups="Arope-spaces.managers_group"/>
                    <button  name="accept_survey" string="Accept Survey" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="Arope-spaces.managers_group"/>


                </header>

                <sheet>
                    <div attrs="{'invisible': [('message', '=', False)]}">
                        <img style="height: 50px;width: 50px;float: left;" src="/Arope-spaces/static/src/img/call.png"/>
                        <span style="float: left; margin-left: 10px;font-size: 30px; color: #078282FF !important;"><i class="fa fa-comment"></i></span>
                        <div style="float: left; margin-left: 10px; color: #078282FF !important; font-weight: 900; padding: 4px; border: solid 1px lightgray;">
                            <field name="message" readonly="1" force_save="1"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field readonly="1" force_save="1" name="type"/>
                            <field attrs="{'invisible': [('type', '!=', 'motor_claim')]}" readonly="1" force_save="1" name="survey_type" />
                            <field readonly="1" force_save="1" name="lob"/>
                            <field readonly="1" force_save="1" name="product_id"/>
                            <field readonly="1" force_save="1" name="customer_name"/>
                            <field readonly="1" force_save="1" name="phone"/>
                            <field readonly="1" force_save="1" name="email"/>
                        </group>
                        <group>
                            <field readonly="1" force_save="1" name="application_id"/>
                            <field attrs="{'invisible': [('type', '!=', 'insurance_application')]}" readonly="1" force_save="1" name="application_date"/>
                            <field name="name"/>

                        </group>
                        <group>
                            <field name="surveyor"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('state', '=', 'pending')]}">
                        <group>
                            <field name="survey_report" widget="many2many_binary"/>
                        </group>
                        <group>
                            <field name="recomm"/>
                        </group>
                        <group>
                            <field name="comment"/>
                        </group>
                    </group>

                    <!--                    <field attrs="{'invisible': [('state', '=', 'pending')]}" name="survey_report_ids">-->
